<?xml version = "1.0" encoding = "utf-8" ?>
<component name = "ScreenSaver" extends = "Scene">
  <script type = "text/brightscript" uri = "pkg:/components/ScreenSaver.brs" />

  <children>
    <Poster
      id = "posterA"
      loadWidth = "1920"
      loadHeight = "1080"
      loadDisplayMode = "scaleToFit"
      opacity = "0.0"
    />

    <Poster
      id = "posterB"
      loadWidth = "1920"
      loadHeight = "1080"
      loadDisplayMode = "scaleToFit"
      opacity = "0.0"
    />

    <Label
      id = "error"
      translation = "[100, 100]"
      font = "font:LargeBoldSystemFont"
    />

    <Label
      id = "telnetMsg"
      translation = "[100, 200]"
      font = "font:LargeBoldSystemFont"
    />
    <Label
      id = "telnetCmd"
      translation = "[100, 250]"
      font = "font:LargeBoldSystemFont"
    />


    <Animation
      id = "animation"
      repeat = "false"
      duration = "0.5"
    >
      <FloatFieldInterpolator
        id = "fadeInInterpolator"
        key = "[0.0,1.0]"
        KeyValue = "[0.0,1.0]"
        fieldToInterp = "posterA.opacity"
      />

      <FloatFieldInterpolator
        id = "fadeOutInterpolator"
        key = "[0.0,1.0]"
        KeyValue = "[1.0,0.0]"
        fieldToInterp = "posterB.opacity"
      />
    </Animation>

    <Timer
      id = "timer"
      duration = "8.0"
    />
  </children>
</component>
