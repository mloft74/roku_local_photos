<component name="MainMenu" extends="Scene" initialFocus="mainMenuOptions">
  <script type="text/brightscript" uri="pkg:/components/MainMenu.brs" />

  <children>
    <Label
      id="title"
      text="Screen Saver"
      horizAlign="left"
      vertAlign="center"
      translation="[200, 100]"
      font="font:LargeBoldSystemFont"
    />

    <Label
      id="serverIpLabel"
      text="Server IP:"
      horizAlign="left"
      vertAlign="center"
      translation="[200, 200]"
    />

    <Label
      id="serverIpValue"
      horizAlign="left"
      vertAlign="center"
      translation="[200, 250]"
    />

    <LabelList
      id="mainMenuOptions"
      translation="[200, 300]"
    >
      <ContentNode
        id="mainMenuOptionsContent"
        role="content"
      >
        <ContentNode title="Check connection" />
        <ContentNode title="Set server IP" />
      </ContentNode>
    </LabelList>
  </children>
</component>
